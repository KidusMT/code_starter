<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" tools:keep="@drawable/btn_bg_curved_stroke_grey">
    <item>
        <shape android:shape="rectangle">
            <!--apply button background transparent, full opacity-->
            <solid android:color="@color/mater_grey_300" />
            <stroke android:color="@color/mater_grey_700" android:width="0.8dp" />
            <!--make button border solid color, nontransparent-->
            <!--corner radius -->
            <corners android:radius="35dp" />

        </shape>
    </item>

</selector>