<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" tools:keep="@drawable/btn_bg_curved_stroke_red">
    <item>
        <shape android:shape="rectangle">
            <!--apply button background transparent, full opacity-->
            <solid android:color="@color/material_red_500" />
            <!--make button border solid color, nontransparent-->
            <stroke android:color="@color/colorPrimary" android:width="1dp" />
            <!--corner radius -->
            <corners android:radius="5dp" />

        </shape>
    </item>

</selector>