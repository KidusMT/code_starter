<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" tools:keep="@drawable/bg_curved_stroke_white_background">
    <item>
        <shape android:shape="rectangle">
            <!--apply button background transparent, full opacity-->
            <solid android:color="@color/white" />
            <!--make button border solid color, nontransparent-->
            <stroke android:width="2dp" android:color="@color/mater_grey_700" />
            <!--corner radius -->
            <corners android:radius="16dp" />

        </shape>
    </item>

</selector>