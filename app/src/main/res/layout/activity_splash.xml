<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_width="200dp"
        android:background="@color/white_transparent"
        android:scaleType="centerCrop"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_launcher"
        android:contentDescription="@string/activity_splash_content_description_logo" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/ginora_sans_semi_bold"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin_32dp"
        android:maxLines="2"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView41"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="56dp"
        android:indeterminate="true" />

</RelativeLayout>
